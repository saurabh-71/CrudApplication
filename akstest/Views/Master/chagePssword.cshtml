    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/JavaScrip/ChangePassword.js?v=1.4"></script>
</head>
<body>
    <div class="row">
        <div class="col-sm-6">
            <div class="log">
            </div>
        </div>
        <div class="col-sm-6" style="padding-left:200px;">
            <a class="lik" href="/Master/chagePssword">ChangePassword</a>
            <a class="lik" href="/Master/LoginPage">    <i class="fa fa-sign-out" aria-hidden="true" style="color:red"></i>   LogOut</a>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid" id="NavBar">
            <a class="navbar-brand pty" href="/Master/Deshboard" style="color:white">Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ryt">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="/Master/Deshboard" data-bs-toggle="dropdown" style="color:white">
                            Product
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Master/AddCategor">Add Category</a></li>
                            <li><a class="dropdown-item" href="/Master/AddSubCategory">Add Sub Category</a></li>
                            <li><a class="dropdown-item" href="/Master/AddProduct">Add Product</a></li>
                        </ul>
                    </li>
                </ul>

            </div>
        </div>
    </nav>
    <form id="form" method="Post">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-4">
                <div class="card">

                    <div class="card-header">
                        <h3 style="color: #036d9a;">Change Password</h3>
                        <div class="card-body">
                            <div class="form-group">
                                <div class="col-sm-4">
                                    <label>Current Password</label>
                                </div>
                                <div class="col-sm-8">
                                    <input type="text" id="txtCurrentPassword" name="CurrentPassword" class="form-control" />
                                    <div id="showerror"></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-5">
                                    <label>New Password</label>
                                </div>
                                <div class="col-sm-7" style="width:67%">
                                    <input type="text" id="txtNewPassword" name="NewPassword" class="form-control" />
                                    <div id="showepseror"></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-5">
                                    <label>Confirm Password</label>
                                </div>
                                <div class="col-sm-8">
                                    <input type="text" id="txtConfirmPassword" name="ConfirmPassword" class="form-control" />
                                    <div id="showcoform"></div>
                                </div>
                            </div>
                            <br />
                            <div class="col-sm-8">
                                <button class="btn btn-primary form-control" id="btnChangePassword">Change Password</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4"></div>
        </div>
    </form>
    <div class="row mt-5" style="margin-left:70px;">
        <div id="Grid"></div>
    </div>
</body>
</html>


